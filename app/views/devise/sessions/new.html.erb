<%= devise_error_messages! %>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="account-form thumbnail">
			<h1>Sign In</h1>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-vertical") do |f| %>
			<div class="form-group">
				<%= f.label :username, :'for' => "Username" %>
				<%= f.text_field :signin, :autofocus => true, :class => "form-control", :placeholder => "Enter username" %>
				
			</div>

			<div class="form-group">
				<%= f.label :password, :'for' => "password" %>
				<%= f.password_field :password, :class => "form-control", :placeholder => "Your secret password" %>
			</div>

			<hr>

      <div class="form-group">
        <div class="controls">
          <% if devise_mapping.rememberable? -%>
						<div class="checkbox pull-left"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
						<% end -%>

						<div><%= f.submit "Sign in", :class=>"btn btn-primary pull-right" %></div>
					<% end %>
        </div>
      </div>

		</div>

		<div class="account-extras">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>