<%= devise_error_messages! %>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="account-form thumbnail">
			<h1>
				Sign Up
				<br />
				<small>Start managing in minutes</small>
			</h1>

			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-vertical") do |f| %>
			<div class="form-group">
				<%= f.label :username, :'for' => "username" %>
				<%= f.text_field :username, :autofocus => true, :class => "form-control", :placeholder => "Enter username" %>
			</div>

			<div class="form-group">
				<%= f.label :email, :'for' => "email" %>
				<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Enter email" %>
			</div>

			<div class="form-group">
				<%= f.label :password, :'for' => "password" %>
				<%= f.password_field :password, :class => "form-control", :placeholder => "Enter your password" %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, :'for' => "password_confirmation" %>
				<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Retype your password" %>
			</div>

			<hr>

      <div class="form-group">
        <div class="controls">
						<div><%= f.submit "Sign up", :class=>"btn btn-primary pull-right" %></div>
					<% end %>
        </div>
      </div>

		</div>

		<div class="account-extras">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>