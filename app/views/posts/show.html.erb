<h1>Post Info</h1>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Restricted:</strong>
  <%= @post.restricted %>
</p>

<%= link_to 'Edit', edit_post_path(@post) if can?(:edit, @post) %>
<%= link_to 'Back', posts_path %>
