<!DOCTYPE html>
<html>
<head>
  <title>CollabBlogs</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
	<% if current_user %>
		<div id="menu">
			Hello, <strong><%= link_to current_user.email, edit_user_registration_path %></strong> | 
			<%= link_to 'logout', destroy_user_session_path, method: :delete %>
		</div>
	<% else %>
		<div id="menu">
			<%= link_to "Sign in", new_user_session_path %> | 
			<%= link_to "Register", new_user_registration_path %>
		</div>
	<% end %>
</div>

<div>
	<% flash.each do |k, v| %>
	  <div id="flash-<%= k %>" class="flash-message"><%= v %></div>
	<% end %>
</div>

<%= yield %>

</body>
</html>
